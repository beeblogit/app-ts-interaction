generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Comment {
  id String @id @default(cuid())

  userId      String
  postId      String

  name String
  comment      String @db.Text

  likes      Int
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map(name: "comment")
}